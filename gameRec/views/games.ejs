<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Games</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .game-list {
            margin-bottom: 20px;
        }

        .game-item {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
            border-radius: 5px;
        }

            .game-item h3 {
                margin: 0;
            }

            .game-item p {
                margin: 5px 0;
            }

        .form-container {
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }

            .form-container form {
                display: flex;
                flex-direction: column;
            }

                .form-container form input,
                .form-container form button {
                    margin-bottom: 10px;
                    padding: 8px;
                    font-size: 16px;
                }
    </style>
</head>
<body>
    <div class="container">
        <h1>Games</h1>

        <div class="form-container">
            <h2>Add New Game</h2>
            <form id="addGameForm">
                <input type="text" name="title" placeholder="Game Title" required>
                <input type="text" name="price" placeholder="Price" required>
                <input type="text" name="developer" placeholder="DeveloperId" required>
                <button type="submit">Add Game</button>
            </form>
        </div>

        <div class="game-list" id="gameList">
            <h2>Game List</h2>
            <!-- Game items will be dynamically added here -->
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            fetchGames();
        });

        function fetchGames() {
            // Fetch games from the server and display them
            fetch('/api/game')
                .then(response => response.json())
                .then(data => {
                    console.log('Data:', data); // Log the data for debugging
                    const gameList = document.getElementById('gameList');
                    gameList.innerHTML = ''; // Clear existing content
                    data.forEach(game => {
                        const gameItem = document.createElement('div');
                        gameItem.className = 'game-item';
                        gameItem.innerHTML = `
                            <h3>${game.Title}</h3>
                            <p>Rating: ${game.AvgRating}</p>
                            <p>Developer: ${game.Developer}</p>
                            <p>Price: ${game.Price}</p>
                            <button onclick="editGame(${game.GameID})">Edit</button>
                            <button onclick="deleteGame(${game.GameID})">Delete</button>
                        `;
                        gameList.appendChild(gameItem);
                    });
                })
                .catch(error => console.error('Error fetching games:', error));
        }
        document.getElementById('addGameForm').addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(this);
            const data = {
                title: formData.get('title'),
                releaseDate: "2024-01-01",
                price: formData.get('price'),
                developerId: formData.get('developer')
            };

            fetch('/api/game', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                fetchGames(); // Refresh game list after adding
            })
            .catch(error => console.error('Error adding game:', error));
        });

        function editGame(gameId) {
            // Logic to handle game edit
            alert('Edit functionality not implemented yet.');
        }

        function deleteGame(gameId) {
            fetch(`/api/games/${gameId}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
                fetchGames(); // Refresh game list after deletion
            })
            .catch(error => console.error('Error deleting game:', error));
        }
    </script>
</body>
</html>
